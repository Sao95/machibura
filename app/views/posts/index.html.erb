<%= sort_link(@search, :created_at, "投稿日時") %>
<!--favorites_count → postモデルで定義-->
<%#= sort_link(@search, :favorites_count, "お気に入り数") %>
<div class=”container”>
<% @posts.each do |post| %>
  <table class=”row”>
    <td class="col-md-4"><%= attachment_image_tag post, :image,size:"350x250", fallback:"asset_path(no_image_square.jpg)" %></td>
    <td class="col-md-8">
      投稿日時：<%= post.created_at.strftime('%Y/%m/%d') %><br>
      住所 / 地名 / 駅名：<%= post.address %><br>
      投稿文：<%= post.writings %><br>
      <%# if post.id = current_user.id %>
      ユーザー：<%#= post.user.name %><br>
      <%# end %>
      コメント件数：<%= post.post_comments.count %><br>
      <% if user_signed_in? %>
      <div id="favorite_btn_<%= post.id %>" class="favorite_btn, float-left">
        <%= render "favorites/favorite_btn", post: post %>
      </div><br><% end %>
      <%= link_to "詳細",  post_path(post.id) %> / 
      <% if user_signed_in? && post.user == current_user %>
        <%= link_to "削除", post_path(post), method: :delete %>
      <% end %>
    </td>
  </table>
<% end %>
</div>

<%= paginate @posts %>
  
