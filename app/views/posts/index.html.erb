<% @posts.each do |post| %>
<div>
  <%= attachment_image_tag post, :image %>
  <p> 地名</p>
  <div><%= post.place %></div>
  <p> 駅名</p>
  <div><%= post.station %></div>
  <p> 投稿文</p>
  <div><%= post.writings %></div>
  <p>ユーザーネーム</p>
  <div><%= post.user.name %></div>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
  <%= link_to "詳細",  post_path(post.id) %>
</div>
<% end %>