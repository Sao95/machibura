<%= sort_link(@search, :created_at, "投稿日時") %>
<!--favorites_count → postモデルで定義-->
<%#= sort_link(@search, :favorites_count, "お気に入り数") %>

<% @posts.each do |post| %>
<div>
  <p>投稿日時：<%= post.created_at.strftime('%Y/%m/%d') %></p>
  <%= attachment_image_tag post, :image %>
  <p> 住所 / 地名 / 駅名</p>
  <div><%= post.address %></div>
  <!--<p> 駅名</p>-->
  <!--<div><%#= post.station %></div>-->
  <p> 投稿文</p>
  <div><%= post.writings %></div>
  <p>ユーザーネーム</p>
  <div><%= post.user.name %></div>
  <p>コメント件数：<%= post.post_comments.count %></p>
  <p>お気に入り件数：<%= post.favorites.count %></p>
  <%= link_to "詳細",  post_path(post.id) %>
  <% if post.user == current_user %>
    <%= link_to "削除", post_path(post), method: :delete %>
  <% end %>
</div>
<% end %>