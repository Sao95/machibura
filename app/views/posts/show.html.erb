<div class=”container”>
  <table class=”row”>
    <td class="col-md-6"><%= attachment_image_tag @post, :image, size:"400x300", fallback:"no_image_square.jpg" %></td>
    <!--asset_path(no_image_square.jpg)-->
    <td class="col-md-6">
      投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %><br>
      住所 / 地名 / 駅名：<%= @post.address %><br>
      投稿文：<%= @post.writings%><br>
      ユーザー：
      <%= link_to user_path(@post.user) do %>
        <%= @post.user.name %><br>
      <% end %>
      <div id="favorite_btn_<%= @post.id %>" class="favorite_btn, float-left">
        <%= render "favorites/favorite_btn", post: @post %>
      </div><br>
      <% if @post.user == current_user %>
        <%#= link_to "編集", edit_post_path(@post) %>
        <%= link_to "削除", post_path(@post), method: :delete %>
      <% end %>
    </td>
  </table>
  <table class=”row”>
    <td class="col-md-6, map"><%= render "posts/map" %></td>
    <td class="col-md-6">
      <div id="post_comments">
        <%= render 'post_comments/index', post_comments: @post.post_comments %>
      </div>
      <div>
        <%= form_with(model:[@post, @post_comment]) do |f| %>
          <%= f.text_area :comment, size:"30x2",placeholder: "コメント" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </td>
  </table>
</div>

