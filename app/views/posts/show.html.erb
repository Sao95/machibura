<div>
  <%= attachment_image_tag @post, :image %>
  <p>住所 / 地名 / 駅名</p>
  <%= render "posts/map" %>
  <div><%= @post.address %></div>
  <!--<p> 駅名</p>-->
  <!--<div><%#= @post.station %></div>-->
  <p> 投稿文</p>
  <p><%= @post.writings%></p>
  <p>ユーザーネーム</p>
  <p><%= @post.user.name %></p>
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.user == current_user %>
    <%#= link_to "編集", edit_post_path(@post) %>
    <%= link_to "削除", post_path(@post), method: :delete %>
  <% end %>
  <div id="favorite_btn">
    <%= render "favorites/favorite_btn", post: @post %>
  </div>
</div>

<div>
<p>コメント件数：<%= @post.post_comments.count %></p>
<div class="post_comments"> 
  <%= render 'post_comments/index', post: @post %>
</div>
<div class ="comments_area">
  <%= form_with(model:[@post, @post_comment]) do |f| %>
    <%= f.text_area :comment, rows:'5',placeholder: "コメント" %>
    <p><%= f.submit "送信する" %></p>
  <% end %>
</div>
