<div>
<p>お気に入り件数：<%= @user.favorites.count %></p>
<% @user.favorites.each do |favorite| %>
  <%= favorite.post.image %>
  <p> 地名</p>
  <div><%= favorite.post.place %></div>
  <p> 駅名</p>
  <div><%= favorite.post.station %></div>
  <p> 投稿文</p>
  <div><%= favorite.post.writings %></div>
  <p>ユーザーネーム</p>
  <div><%= favorite.post.user.name %></div>
  <%= favorite.created_at.strftime('%Y/%m/%d') %>
  <% if favorite.post.favorited_by?(current_user) %>
    <p>
      <%= link_to favorite_path(favorite.id, :post_id => favorite.post.id), method: :delete do %>
        ♥いいね
      <% end %>
    </p>
  <% end %>
<% end %>
</div>