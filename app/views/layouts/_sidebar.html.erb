<div class="search">
  <!--search_form_for → ransackが提供するフォームヘルパー-->
  <%= search_form_for @search do |f| %>
    <%#= f.label :address_or_writings_or_user_name_cont, "Keyword" %>
    <%= f.search_field :address_or_writings_or_user_name_cont, class: 'form-control', placeholder: '検索ワード', required: true %>
    <%= f.submit '検索', class: 'btn btn-primary' %>
  <% end %>
</div>
<div class="text-left">
  <p><%= link_to '投稿フォーム', new_post_path %></p>
  <% if user_signed_in? %>
  <!--@userはapplicationコントローラーでcurrent_userに設定している-->
  <p class="index_link">
    <%= link_to "コメント履歴",  user_post_comments_path(@user) %><br>
    <%= link_to "お気に入り履歴",  user_favorites_path(@user) %>
  </p>
  <% end %>
</div>