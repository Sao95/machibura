<div class="search">
  <!--search_form_for → ransackが提供するフォームヘルパー-->
  <% if admin_signed_in? %>
  <% else %>
    <%= search_form_for @search do |f| %>
      <%#= f.label :address_or_writings_or_user_name_cont, "Keyword" %>
      <%= f.search_field :address_or_writings_or_user_name_cont, class: 'form-control', placeholder: '検索ワード', required: true %>
      <%= f.submit '検索', class: 'btn' %>
    <% end %>
  <% end %>

</div>
<div class="link_btn1">
  <div class='btn'><i class="fas fa-pen"></i><span><%= link_to '投稿フォーム', new_post_path %></span></div>
  <div class='btn'><i class="far fa-bell"></i><span><%= link_to 'お問い合わせ', new_contact_path %></span></div>
  <div class='btn'><i class="fas fa-award"></i><span><%= link_to 'ランキング', runking_posts_path %></span></div>
</div>
<div class="link_btn2">
  <% if user_signed_in? %>
    <!--@userはapplicationコントローラーでcurrent_userに設定している-->
    <div class='btn'><%= link_to "コメント履歴",  user_post_comments_path(@user) %></div>
    <div class='btn'><%= link_to "お気に入り履歴",  user_favorites_path(@user) %></div>
  <% end %>
</div>